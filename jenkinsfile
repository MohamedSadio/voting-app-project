pipeline {
    agent any
    
    environment {
        COMPOSE_PROJECT_NAME = 'voting-app'
        PROJECT_PATH = '/home/projeager/voting-app-project'
    }
    
    stages {
        stage('Prepare Workspace') {
            steps {
                echo 'Preparing workspace from local files...'
                script {
                    // Copier les fichiers du projet local vers l'espace de travail Jenkins
                    sh '''
                        rm -rf ./*
                        cp -r ${PROJECT_PATH}/* .
                        ls -la
                    '''
                }
            }
        }
        
        stage('Build Images') {
            steps {
                echo 'Building Docker images...'
                sh 'docker-compose build --no-cache'
            }
        }
        
        stage('Deploy Application') {
            steps {
                echo 'Deploying application...'
                sh 'docker-compose down || true'
                sh 'docker-compose up -d vote result worker redis db'
            }
        }
        
        stage('Health Check') {
            steps {
                echo 'Checking application health...'
                script {
                    // Attendre que les services soient prêts
                    sleep 30
                    
                    // Vérifier vote app
                    sh 'curl -f http://localhost:5000 || exit 1'
                    
                    // Vérifier result app
                    sh 'curl -f http://localhost:5001 || exit 1'
                    
                    echo 'Application is healthy!'
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
            sh 'docker-compose logs'
        }
        always {
            echo 'Cleaning up...'
            sh 'docker system prune -f'
        }
    }
}